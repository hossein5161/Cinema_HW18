    <servlet-mapping>
        <servlet-name>UserMoviesServlet</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>register</welcome-file>
    </welcome-file-list>

</web-app>